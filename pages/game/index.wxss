/**index.wxss**/
.userinfo {
  margin:0 auto;
  text-align: center;
  float:left;
  width:40%;
  height:300rpx;
  line-height: 300rpx;
}
.top{
  width:100%;
  height:300rpx;
}
.userinfo_left{
  width:30%;
  height: 300rpx;
  float:left;
  text-align: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo_right{
  width:30%;
  height: 300rpx;
  float:right;
  text-align: center;
}
.userinfo-nickname {
  color: #aaa;
  text-overflow : ellipsis;
  white-space : nowrap;
  overflow : hidden; 
}
.user-title{
  text-align: center;
  font-size: 60rpx;
}
.usermotto {
  margin-top: 50rpx;
  margin-bottom:50rpx;
}
.usermatch{
   margin-top: 50px;
}
.unready{
  display:none;
}
.number_button{
  float:left;
  margin-left:20rpx;
}
.hidden{
  display:none;
}
.show{
  display:block;
}